
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
@{
    Layout = null; // Trang login không dùng layout chung
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow p-4" style="width: 400px;">
        <h3 class="text-center mb-4 fw-bold">ADMIN LOGIN</h3>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        @using (Html.BeginForm())
        {
            <div class="mb-3">
                <label>Tài khoản</label>
                <input type="text" name="User" class="form-control" required maxlength="20"/>
            </div>
            <div class="mb-3">
                <label>Mật khẩu</label>
                <input type="password" name="Pass" class="form-control" required maxlength="10"/>
            </div>
            <button type="submit" class="btn btn-dark w-100">ĐĂNG NHẬP</button>
        }
    </div>
</div>