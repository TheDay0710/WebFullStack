

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2 class="mb-4">TỔNG QUAN SHOP</h2>

<div class="row">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">SẢN PHẨM</h5>
                <p class="card-text display-4">@ViewBag.SoLuongSanPham</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">ĐƠN HÀNG</h5>
                <p class="card-text display-4">@ViewBag.SoLuongDonHang</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-dark mb-3">
            <div class="card-body">
                <h5 class="card-title">KHÁCH HÀNG</h5>
                <p class="card-text display-4">@ViewBag.SoLuongKhach</p>
            </div>
        </div>
    </div>
</div>