@using Web
@{
    ViewBag.Title = "GIỎ HÀNG";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .adidas-font {
        font-family: 'Oswald', sans-serif;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 1px;
    }

    .btn-black {
        background: #000;
        color: #fff;
        border: none;
        padding: 15px 30px; /* Tăng padding cho nút to đẹp */
        font-weight: bold;
        font-family: 'Oswald', sans-serif;
        text-transform: uppercase;
        text-decoration: none;
        display: block;
        width: 100%;
        text-align: center;
        transition: 0.3s;
    }

        .btn-black:hover {
            background: #333;
            color: #fff;
        }

    .cart-img {
        width: 100px;
        height: 100px;
        object-fit: contain;
        border: 1px solid #f0f0f0;
        background: #fff;
    }

    /* --- SỬA LỖI Ô SỐ LƯỢNG --- */
    .qty-input {
        width: 60px; /* Rộng hơn */
        height: 40px; /* Cao hơn */
        text-align: center;
        border: 1px solid #000;
        font-weight: bold;
        font-size: 16px; /* Chữ to rõ */
        color: #000; /* Màu đen tuyệt đối */
        outline: none;
        background: #fff;
    }

        .qty-input:focus {
            background-color: #f8f9fa;
        }

    .size-badge {
        background: #fff;
        border: 1px solid #000;
        padding: 5px 10px;
        font-size: 13px;
        font-weight: bold;
        color: #000;
        text-transform: uppercase;
        display: inline-block;
    }

    /* Nút xóa đẹp hơn */
    .btn-remove {
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #ccc;
        color: #666;
        text-decoration: none;
        transition: 0.2s;
    }

        .btn-remove:hover {
            border-color: #000;
            color: #000;
            background: #f0f0f0;
        }

    /* Căn chỉnh bảng */
    .table thead th {
        border-bottom: 2px solid #000;
        font-size: 13px;
        text-transform: uppercase;
        font-weight: bold;
        padding: 15px 10px;
    }

    .table td {
        vertical-align: middle;
        padding: 20px 10px;
    }

    /* Chia lại độ rộng cột trong bảng trái */
    .col-product {
        width: 40%;
    }

    .col-size {
        width: 10%;
        text-align: center;
    }

    .col-price {
        width: 15%;
    }

    .col-qty {
        width: 15%;
        text-align: center;
    }

    .col-total {
        width: 15%;
        text-align: right;
    }

    .col-action {
        width: 5%;
    }

    .product-name-link {
        color: #000;
        text-decoration: none;
        font-weight: bold;
        font-size: 15px;
        text-transform: uppercase;
    }

        .product-name-link:hover {
            text-decoration: underline;
        }
</style>

<div class="container py-5" style="min-height: 600px;">
    <h2 class="adidas-font mb-5">GIỎ HÀNG CỦA BẠN</h2>

    @if (Session["Cart"] != null && ((List<CartItem>)Session["Cart"]).Count > 0)
    {
        var cart = (List<CartItem>)Session["Cart"];
        double total = cart.Sum(item => (double)item._shopping_product.Price * item._shopping_quantity);

        <div class="row">
            <div class="col-lg-8 mb-5">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="col-product">SẢN PHẨM</th>
                                <th class="col-size">SIZE</th>
                                <th class="col-price">GIÁ</th>
                                <th class="col-qty">SỐ LƯỢNG</th>
                                <th class="col-total">THÀNH TIỀN</th>
                                <th class="col-action"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in cart)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="~/Content/images/@item._shopping_product.ImagePro" class="cart-img me-3" alt="@item._shopping_product.NamePro">
                                            <div>
                                                <a href="@Url.Action("Details", "Products", new { id = item._shopping_product.ProductID })" class="product-name-link">
                                                    @item._shopping_product.NamePro
                                                </a>
                                                <br>
                                                <span class="text-muted" style="font-size: 12px;">ID: #@item._shopping_product.ProductID</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="size-badge">@item._shopping_size</span>
                                    </td>
                                    <td>@string.Format("{0:N0} ₫", item._shopping_product.Price)</td>
                                    <td class="text-center">
                                        @using (Html.BeginForm("UpdateCart", "Cart", new { id = item._shopping_product.ProductID, size = item._shopping_size }, FormMethod.Post))
                                        {
                                            <input type="number"
                                                   name="Quantity"
                                                   value="@item._shopping_quantity"
                                                   min="1" max="10"
                                                   class="qty-input"
                                                   onchange="this.form.submit()" />
                                        }
                                    </td>
                                    <td class="fw-bold text-end">
                                        @string.Format("{0:N0} ₫", item._shopping_product.Price * item._shopping_quantity)
                                    </td>
                                    <td class="text-end">
                                        <a href="@Url.Action("RemoveCart", "Cart", new { id = item._shopping_product.ProductID, size = item._shopping_size })"
                                           class="btn-remove ms-auto"
                                           onclick="return confirm('Bạn có chắc muốn xóa?')" title="Xóa">
                                            ✕
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-4">
                    <a href="@Url.Action("Index", "Products")" class="text-decoration-none text-dark fw-bold">
                        <i class="fas fa-arrow-left me-2"></i> TIẾP TỤC MUA SẮM
                    </a>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="border p-4 bg-white shadow-sm">
                    <h4 class="adidas-font mb-4" style="font-size: 22px;">TÓM TẮT ĐƠN HÀNG</h4>

                    <div class="d-flex justify-content-between mb-3 text-muted">
                        <span>Số lượng sản phẩm</span>
                        <span>@cart.Sum(x => x._shopping_quantity)</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Tạm tính</span>
                        <span class="fw-bold">@string.Format("{0:N0} ₫", total)</span>
                    </div>
                    <div class="d-flex justify-content-between mb-4">
                        <span>Vận chuyển</span>
                        <span class="text-success fw-bold">Miễn phí</span>
                    </div>

                    <hr style="border-top: 2px solid #000;">

                    <div class="d-flex justify-content-between mb-4">
                        <span class="adidas-font fs-5">TỔNG CỘNG</span>
                        <span class="adidas-font fs-4">@string.Format("{0:N0} ₫", total)</span>
                    </div>

                    <a href="@Url.Action("Index", "Payment")" class="btn-black">
                        THANH TOÁN NGAY <i class="fas fa-arrow-right ms-2"></i>
                    </a>

                    <div class="mt-3 text-center text-muted" style="font-size: 12px;">
                        <i class="fas fa-lock me-1"></i> Thanh toán an toàn & bảo mật
                    </div>
                </div>

                <div class="border p-3 mt-4 bg-light">
                    <h6 class="adidas-font mb-2" style="font-size: 14px;">MÃ KHUYẾN MÃI</h6>
                    <div class="input-group">
                        <input type="text" class="form-control rounded-0" placeholder="Nhập mã...">
                        <button class="btn btn-dark rounded-0">+</button>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center mt-5 py-5">
            <div class="mb-4">
                <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                <h4 class="adidas-font text-muted">GIỎ HÀNG TRỐNG</h4>
            </div>
            <p class="text-muted mb-4">Hãy khám phá các sản phẩm mới nhất và thêm vào giỏ hàng.</p>

            <a href="@Url.Action("Index", "Products")" class="btn-black px-5 py-3" style="width: auto; display: inline-block;">
                MUA SẮM NGAY
            </a>
        </div>
    }
</div>