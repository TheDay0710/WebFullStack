
@{
    ViewBag.Title = "LayoutAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ADIDAS ADMIN SYSTEM</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f6f9;
        }

        /* SIDEBAR (MENU TRÁI) */
        .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #000; /* Màu đen Adidas */
            padding-top: 20px;
            color: #fff;
        }

            .sidebar h3 {
                text-align: center;
                font-weight: bold;
                color: #fff;
                margin-bottom: 30px;
                font-family: 'Oswald', sans-serif;
                letter-spacing: 2px;
            }

            .sidebar a {
                padding: 15px 25px;
                text-decoration: none;
                font-size: 16px;
                color: #b8c7ce;
                display: block;
                transition: 0.3s;
                border-left: 3px solid transparent;
            }

                .sidebar a:hover {
                    color: #fff;
                    background-color: #333;
                    border-left: 3px solid #fff;
                }

                .sidebar a i {
                    margin-right: 10px;
                    width: 20px;
                    text-align: center;
                }

        /* CONTENT (NỘI DUNG PHẢI) */
        .main-content {
            margin-left: 250px;
            padding: 30px;
        }

        .admin-header {
            background: #fff;
            padding: 15px 30px;
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h3>ADIDAS ADMIN</h3>
        <a href="@Url.Action("Index", "Admin")"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
        <a href="@Url.Action("Index", "Products")"><i class="fas fa-box"></i> Quản lý Sản phẩm</a>
        <a href="@Url.Action("Index", "Category")"><i class="fas fa-list"></i> Quản lý Danh mục</a>
        <a href="@Url.Action("Index", "Order")"><i class="fas fa-shopping-cart"></i> Quản lý Đơn hàng</a>
        <a href="@Url.Action("Index", "Customers")"><i class="fas fa-users"></i> Khách hàng</a>
        <hr style="border-color: #333;">
        <a href="@Url.Action("Logout", "Admin")" style="color: #ff6b6b;"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a>
    </div>

    <div class="main-content">
        <div class="admin-header">
            <h4 class="m-0">HỆ THỐNG QUẢN TRỊ</h4>
            <div>
                Xin chào, <strong>@Session["AdminUser"]</strong>
            </div>
        </div>

        <div class="container-fluid bg-white p-4 shadow-sm rounded">
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

