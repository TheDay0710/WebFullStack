@model IEnumerable<WEB.Product>
@using System.Linq
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
   
    .banner {
        background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://i.ibb.co/Rp5pPvnQ/banner-giayadidas-1.jpg');
        height: 75vh;
        background-size: cover;
        background-position: center;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: #fff;
    }

    .banner-content h2 {
        font-size: 3.5rem;
        margin-bottom: 1rem;
        color: #fff;
        font-family: 'Oswald', sans-serif;
        text-transform: uppercase;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    }

    .banner-content p {
        font-size: 1.2rem;
        margin-bottom: 2rem;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
    }

    .btn-banner {
        display: inline-block;
        background: #fff;
        color: #000;
        padding: 12px 30px;
        border: none;
        font-size: 1rem;
        font-weight: bold;
        text-transform: uppercase;
        transition: all 0.3s ease;
        text-decoration: none;
        font-family: 'Oswald', sans-serif;
        letter-spacing: 1px;
    }

        .btn-banner:hover {
            background: #000;
            color: #fff;
        }

  
    .horizontal-scroll-wrapper {
        position: relative;
        width: 100%;
    }

    .scroll-container {
        display: flex;
        overflow-x: auto;
        scroll-behavior: smooth;
        gap: 20px;
        padding: 20px 5px;
        scrollbar-width: none;
        -ms-overflow-style: none;
    }

        .scroll-container::-webkit-scrollbar {
            display: none;
        }


    .product-item, .kit-item {
        flex: 0 0 280px;
        width: 280px;
        background: #fff;
        border: 1px solid #e5e5e5;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .product-item:hover, .kit-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }


    .scroll-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 40px;
        height: 40px;
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 50%;
        cursor: pointer;
        z-index: 10;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 18px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        transition: 0.3s;
    }

        .scroll-btn:hover {
            background: #000;
            color: #fff;
        }

    .scroll-left {
        left: -20px;
    }

    .scroll-right {
        right: -20px;
    }

    
    .section-title {
        font-family: 'Oswald', sans-serif;
        text-transform: uppercase;
        font-weight: 700;
        margin-bottom: 20px;
        font-size: 2rem;
    }


    .product-image {
        width: 100%;
        height: 280px;
        background: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            display: block;
            padding: 10px;
        }

    .product-info {
        padding: 15px;
        text-align: left;
    }

    .product-name {
        font-size: 1rem;
        margin: 5px 0;
        height: 40px;
        overflow: hidden;
        font-weight: bold;
    }

    .product-price {
        font-weight: bold;
        color: #000;
        font-size: 1.1rem;
        margin-bottom: 10px;
    }

    .add-to-cart-link {
        display: block;
        text-align: center;
        padding: 12px;
        background: #000;
        color: #fff;
        font-weight: bold;
        text-transform: uppercase;
        text-decoration: none;
        font-size: 13px;
        margin: 0 15px 15px 15px;
    }

        .add-to-cart-link:hover {
            background: #333;
            color: #fff;
        }


    .kit-item {
        border: none;
    }

    .kit-image-wrapper {
        position: relative;
        display: block;
        width: 100%;
        height: 350px;
        background-color: #f0f0f0;
        overflow: hidden;
    }

        .kit-image-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            transition: transform 0.4s ease;
        }

        .kit-image-wrapper:hover img {
            transform: scale(1.05);
        }

    .kit-overlay-text {
        position: absolute;
        top: 10px;
        left: 15px;
        color: #000;
        font-family: 'Oswald', sans-serif;
        font-weight: 700;
        font-size: 2rem;
        text-shadow: none;
    }

    .kit-info {
        padding: 15px 5px;
    }

    .buy-now {
        text-decoration: underline;
        font-weight: bold;
        color: #000;
        text-transform: uppercase;
        font-size: 13px;
    }


    .product-grid-view {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
    }
</style>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card product-card">
                <div class="product-image">
                    <img src="~/Content/images/@product.ImagePro" alt="@product.NamePro" />
                </div>
                <div class="card-body">
                    <h6 class="card-title">@product.NamePro</h6>
                    <p class="card-text text-danger fw-bold">@String.Format("{0:N0} VNĐ", product.Price)</p>
                    <a href="@Url.Action("Details", "Products", new { id = product.ProductID })"
                       class="btn btn-outline-dark btn-sm">Xem chi tiết</a>
                </div>
            </div>
        </div>
    }
</div>
@if (!Model.Any())
{
    <div class="text-center py-5">
        <p class="text-muted">Không có sản phẩm nào trong danh mục này.</p>
    </div>
}

