@model WEB.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    /* --- CSS RIÊNG CHO TRANG CHI TIẾT --- */

    .adidas-font {
        font-family: 'Oswald', sans-serif;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 1px;
    }

    /* 1. CỘT ẢNH BÊN TRÁI */
    .product-gallery {
        background-color: #eceff1;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 600px;
        position: relative;
    }

        .product-gallery img {
            width: 100%;
            max-width: 600px;
            mix-blend-mode: multiply;
        }

    .gallery-nav {
        position: absolute;
        bottom: 20px;
        left: 20px;
        display: flex;
        gap: 10px;
    }

        .gallery-nav button {
            width: 40px;
            height: 40px;
            border: 1px solid #000;
            background: #fff;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 18px;
        }

    /* 2. CỘT THÔNG TIN BÊN PHẢI */
    .product-sidebar {
        padding-left: 30px;
    }

    .category-text {
        color: #767677;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 1px;
        text-decoration: underline;
        cursor: pointer;
    }

    .product-title {
        font-family: 'Oswald', sans-serif;
        font-weight: 700;
        font-style: italic;
        text-transform: uppercase;
        font-size: 38px;
        line-height: 1;
        margin: 10px 0;
    }

    .product-price {
        font-weight: bold;
        font-size: 18px;
        margin-bottom: 15px;
    }

    /* Hộp thông báo */
    .pop-alert {
        background-color: #f0f0f0;
        padding: 10px;
        font-size: 13px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
    }

    /* Chọn Size */
    .size-guide {
        font-size: 12px;
        text-decoration: underline;
        float: right;
        cursor: pointer;
        margin-bottom: 5px;
    }

    .size-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 5px;
        margin-bottom: 30px;
    }

    .size-item {
        border: 1px solid #e5e5e5;
        text-align: center;
        padding: 10px 0;
        font-size: 13px;
        cursor: pointer;
        transition: 0.2s;
        background: #fff;
    }

        .size-item:hover {
            border-color: #000;
        }

        .size-item.active {
            background: #000;
            color: #fff;
            border-color: #000;
        }

    /* Nút Mua & Tim */
    .actions-row {
        display: flex;
        gap: 10px;
        margin-bottom: 30px;
    }

    .btn-add-cart {
        flex-grow: 1;
        background: #000;
        color: #fff;
        border: none;
        padding: 15px;
        font-family: 'Oswald', sans-serif;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 2px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        text-decoration: none;
        transition: 0.3s;
    }

        .btn-add-cart:hover {
            background: #333;
            color: #fff;
        }

    .btn-wishlist {
        width: 54px;
        border: 1px solid #000;
        background: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
        font-weight: bold;
        cursor: pointer;
    }

        .btn-wishlist:hover {
            color: red;
            border-color: red;
        }

    /* Thông tin bổ sung */
    .extra-info-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 15px 0;
        border-top: 1px solid #e5e5e5;
        font-size: 13px;
        text-transform: uppercase;
        font-weight: bold;
        cursor: pointer;
    }
</style>

<div class="container mt-3 mb-3">
    <span class="category-text">Trở lại</span>
    <span class="mx-2">|</span>
    <span class="category-text">Trang chủ</span> / <span class="category-text">Giày</span>
</div>

<div class="container mb-5">
    <div class="row">
        <div class="col-md-7 mb-4">
            <div class="product-gallery">
                <img src="~/Content/images/@Model.ImagePro" alt="@Model.NamePro" />

                <div class="gallery-nav">
                    <button>&lt;</button>
                    <button>&gt;</button>
                </div>
            </div>
        </div>

        <div class="col-md-5 product-sidebar">
            <div class="d-flex justify-content-between">
                <span class="text-muted text-uppercase" style="font-size:13px;">Nam • Chạy</span>
                <span style="font-size:13px; font-weight:bold; text-decoration:underline;">11 Đánh giá</span>
            </div>

            <h1 class="product-title">@Model.NamePro</h1>
            <div class="product-price">@string.Format("{0:N0} ₫", Model.Price)</div>

            <div class="pop-alert">
                <span><strong>Popularity Alert!</strong> Sản phẩm này được xem 414 lần trong 7 ngày qua.</span>
            </div>

            <div class="clearfix mt-4">
                <span class="fw-bold text-uppercase" style="font-size:13px;">Kích cỡ</span>
                <span class="size-guide">Hướng dẫn chọn kích cỡ</span>
            </div>

            <div class="size-grid">
                <div class="size-item">6 UK</div>
                <div class="size-item">6.5 UK</div>
                <div class="size-item active">7 UK</div>
                <div class="size-item">7.5 UK</div>
                <div class="size-item">8 UK</div>
                <div class="size-item">8.5 UK</div>
                <div class="size-item">9 UK</div>
                <div class="size-item">9.5 UK</div>
                <div class="size-item">10 UK</div>
                <div class="size-item">10.5 UK</div>
                <div class="size-item" style="opacity:0.5; background:#f5f5f5;">11 UK</div>
                <div class="size-item">12 UK</div>
            </div>

            <div class="actions-row">
                <a href="@Url.Action("AddToCart", "Cart", new { id = Model.ProductID })" class="btn-add-cart">
                    THÊM VÀO GIỎ HÀNG
                    <span>→</span>
                </a>
                <div class="btn-wishlist">
                    LƯU
                </div>
            </div>

            <div class="mt-4">
                <div class="extra-info-item">
                    <span>MIỄN PHÍ VẬN CHUYỂN CHO HỘI VIÊN</span>
                    <span>></span>
                </div>
                <div class="extra-info-item">
                    <span>TRẢ HÀNG DỄ DÀNG</span>
                    <span>></span>
                </div>
            </div>

            <div class="mt-4">
                <h5 class="adidas-font" style="font-size:16px;">MÔ TẢ</h5>
                <p style="font-size:14px; line-height:1.6; color:#333;">
                    @(string.IsNullOrEmpty(Model.Type) ? "Sản phẩm chính hãng Adidas. Thiết kế hiện đại, công nghệ tiên tiến giúp tối ưu hiệu suất vận động." : Model.Type)
                </p>
            </div>

        </div>
    </div>
</div>