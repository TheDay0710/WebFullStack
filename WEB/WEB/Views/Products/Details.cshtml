@model WEB.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    /* --- CSS RIÊNG CHO TRANG CHI TIẾT --- */

    .adidas-font {
        font-family: 'Oswald', sans-serif;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 1px;
    }

    /* 1. CỘT ẢNH BÊN TRÁI */
    .product-gallery {
        background-color: #eceff1;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 600px;
        position: relative;
    }

        .product-gallery img {
            width: 100%;
            max-width: 600px;
            mix-blend-mode: multiply;
        }

    .gallery-nav {
        position: absolute;
        bottom: 20px;
        left: 20px;
        display: flex;
        gap: 10px;
    }

        .gallery-nav button {
            width: 40px;
            height: 40px;
            border: 1px solid #000;
            background: #fff;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 18px;
        }

    /* 2. CỘT THÔNG TIN BÊN PHẢI */
    .product-sidebar {
        padding-left: 30px;
    }

    .category-text {
        color: #767677;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 1px;
        text-decoration: underline;
        cursor: pointer;
    }

    .product-title {
        font-family: 'Oswald', sans-serif;
        font-weight: 700;
        font-style: italic;
        text-transform: uppercase;
        font-size: 38px;
        line-height: 1;
        margin: 10px 0;
    }

    .product-price {
        font-weight: bold;
        font-size: 18px;
        margin-bottom: 15px;
    }

    /* Hộp thông báo */
    .pop-alert {
        background-color: #f0f0f0;
        padding: 10px;
        font-size: 13px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
    }

    /* Chọn Size */
    .size-guide {
        font-size: 12px;
        text-decoration: underline;
        float: right;
        cursor: pointer;
        margin-bottom: 5px;
    }

    .size-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 5px;
        margin-bottom: 30px;
    }

    .size-item {
        border: 1px solid #e5e5e5;
        text-align: center;
        padding: 10px 0;
        font-size: 13px;
        cursor: pointer;
        transition: 0.2s;
        background: #fff;
    }

        .size-item:hover {
            border-color: #000;
        }

        .size-item.active {
            background: #000;
            color: #fff;
            border-color: #000;
        }

        /* CSS MỚI CHO SIZE */
        .size-item.disabled {
            background-color: #f5f5f5;
            color: #ccc;
            cursor: not-allowed;
            position: relative;
        }

            .size-item.disabled::after {
                content: "";
                position: absolute;
                top: 50%;
                left: 10%;
                width: 80%;
                height: 1px;
                background: #ccc;
                transform: rotate(-45deg);
            }

    /* Nút Mua & Tim */
    .actions-row {
        display: flex;
        gap: 10px;
        margin-bottom: 30px;
    }

    .btn-add-cart {
        flex-grow: 1;
        background: #000;
        color: #fff;
        border: none;
        padding: 15px;
        font-family: 'Oswald', sans-serif;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 2px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        text-decoration: none;
        transition: 0.3s;
    }

        .btn-add-cart:hover {
            background: #333;
            color: #fff;
        }

        /* CSS MỚI CHO NÚT DISABLED */
        .btn-add-cart:disabled {
            background-color: #ccc;
            cursor: not-allowed;
        }

            .btn-add-cart:disabled:hover {
                background-color: #ccc;
            }

    .btn-wishlist {
        width: 54px;
        border: 1px solid #000;
        background: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
        font-weight: bold;
        cursor: pointer;
    }

        .btn-wishlist:hover {
            color: red;
            border-color: red;
        }

    /* Thông tin bổ sung */
    .extra-info-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 15px 0;
        border-top: 1px solid #e5e5e5;
        font-size: 13px;
        text-transform: uppercase;
        font-weight: bold;
        cursor: pointer;
    }
</style>

<!-- PHẦN 1: THÔNG BÁO -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}


<div class="container mb-5">
    <div class="row">
        <div class="col-md-7 mb-4">
            <div class="product-gallery">
                <img src="~/Content/images/@Model.ImagePro" alt="@Model.NamePro" />

            </div>
        </div>

        <div class="col-md-5 product-sidebar">
            <div class="d-flex justify-content-between">
                <span class="text-muted text-uppercase" style="font-size:13px;">Nam • Chạy</span>
                <span style="font-size:13px; font-weight:bold; text-decoration:underline;">@Model.NumOfReview Đánh giá</span>
            </div>

            <h1 class="product-title">@Model.NamePro</h1>
            <div class="product-price">@string.Format("{0:N0} ₫", Model.Price)</div>

            <div class="pop-alert">
                <span><strong>Popularity Alert!</strong> Sản phẩm này được xem @Model.ViewCount lần.</span>
            </div>

           

            @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post))
            {
                @Html.Hidden("productId", Model.ProductID)
                @Html.Hidden("selectedSize", "", new { id = "selectedSize" })

                <div class="size-grid" id="sizeGrid">
                    @if (Model.ProductSizes != null && Model.ProductSizes.Any())
                    {
                        foreach (var size in Model.ProductSizes.OrderBy(ps => ps.SizeName))
                        {
                            <div class="size-item @(size.Quantity == 0 ? "disabled" : "")"
                                 data-size="@size.SizeName"
                                 data-quantity="@size.Quantity"
                                 onclick="selectSize('@size.SizeName', @size.Quantity)">
                                @size.SizeName
                                @if (size.Quantity == 0)
                                {
                                    <div style="font-size:10px; color:red;">HẾT HÀNG</div>
                                }
                                else if (size.Quantity < 5)
                                {
                                    <div style="font-size:10px; color:orange;">SẮP HẾT</div>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-muted">Đang cập nhật sizes...</div>
                    }
                </div>

                <div class="actions-row">
                    <button onclick="location.href='@Url.Action("Index", "Cart")'" type="submit" class="btn-add-cart" id="addToCartBtn" disabled>
                        THÊM VÀO GIỎ HÀNG
                                             
                    </button>
                   
                  
                </div>
            }

            <div class="mt-4">
                <div class="extra-info-item">
                    <span>MIỄN PHÍ VẬN CHUYỂN CHO HỘI VIÊN</span>
                    <span>></span>
                </div>
                <div class="extra-info-item">
                    <span>TRẢ HÀNG DỄ DÀNG</span>
                    <span>></span>
                </div>
            </div>

            <div class="mt-4">
                <h5 class="adidas-font" style="font-size:16px;">MÔ TẢ</h5>
                <p style="font-size:14px; line-height:1.6; color:#333;">
                    @(string.IsNullOrEmpty(Model.Type) ? "Sản phẩm chính hãng Adidas. Thiết kế hiện đại, công nghệ tiên tiến giúp tối ưu hiệu suất vận động." : Model.Type)
                </p>
            </div>

        </div>
    </div>
</div>

<!-- PHẦN 3: JAVASCRIPT -->
@section Scripts {
    <script>
    let selectedSizeValue = '';

    function selectSize(size, quantity) {
        if (quantity <= 0) return;

        // Remove active class from all sizes
        document.querySelectorAll('.size-item').forEach(item => {
            item.classList.remove('active');
        });

        // Add active class to selected size
        event.target.classList.add('active');

        // Store selected size
        selectedSizeValue = size;
        document.getElementById('selectedSize').value = size;

        // Enable add to cart button
        document.getElementById('addToCartBtn').disabled = false;

        // Update stock info (có thể hiển thị thông báo nếu cần)
        console.log('Selected size:', size, 'Stock:', quantity);
    }

    // Form submission handling
    document.querySelector('form').addEventListener('submit', function(e) {
        if (!selectedSizeValue) {
            e.preventDefault();
            alert('Vui lòng chọn kích cỡ trước khi thêm vào giỏ hàng');
            return false;
        }
    });

    function addToWishlist() {
        if (!selectedSizeValue) {
            alert('Vui lòng chọn kích cỡ trước khi lưu sản phẩm');
            return;
        }

        // Gọi API hoặc xử lý thêm vào wishlist ở đây
        alert('Đã lưu sản phẩm "' + '@Model.NamePro' + '" với size ' + selectedSizeValue + ' vào danh sách yêu thích');

        // Có thể gọi AJAX để lưu vào database
        
        $.post('@Url.Action("AddToWishlist", "Account")', {
            productId: @Model.ProductID,
            size: selectedSizeValue
        }, function(response) {
            if (response.success) {
                alert('Đã lưu vào danh sách yêu thích!');
            }
        });
       
    }

    // Xử lý nút gallery (tuỳ chọn)
    document.querySelectorAll('.gallery-nav button').forEach((button, index) => {
        button.addEventListener('click', function() {
            // Logic chuyển ảnh có thể thêm ở đây
            console.log('Gallery button clicked:', index);
        });
    });
    </script>
}